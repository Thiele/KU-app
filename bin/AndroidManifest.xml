<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nu.thiele.kuskemaapp"
    android:versionCode="2"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@style/AppTheme" >
        <activity
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:name="nu.thiele.kuskemaapp.activities.MainActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            <activity
            android:configChanges="orientation"
            android:name="nu.thiele.kuskemaapp.activities.AddEditCoursesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:name="nu.thiele.kuskemaapp.activities.AddEditActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
